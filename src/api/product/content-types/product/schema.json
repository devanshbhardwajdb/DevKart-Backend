{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 71,
      "minLength": 1
    },
    "slug": {
      "type": "uid",
      "required": true,
      "minLength": 3,
      "maxLength": 110
    },
    "description": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "size": {
      "type": "string",
      "required": false,
      "maxLength": 70
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "green",
        "red",
        "black",
        "white",
        "orange"
      ],
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "availableQty": {
      "type": "integer",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "tshirt",
        "pant",
        "hoodie",
        "shirt",
        "jeans"
      ],
      "required": true
    }
  }
}
